<%-include ("../Includes/Trainer/head.ejs")%>

  <body>
    <%-include ("../Includes/Trainer/header.ejs")%>
      <!-- ======= Sidebar ======= -->
      <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">

          <li class="nav-item">
            <a class="nav-link collapsed" href="/trainer/dashboard">
              <i class="bi bi-grid-fill"></i>
              <span>Dashboard</span>
            </a>
          </li>
          <!-- End Dashboard Nav -->
          </li><!-- End Components Nav -->
          <li class="nav-item">
            <a class="nav-link " href="/trainer/client">
              <i class="bi bi-people-fill"></i>
              <span>Clients</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link collapsed" href="/trainer/task">
              <i class="bi bi-list-task"></i>
              <span>Tasks</span>
            </a>
          </li>

          <li class="nav-item">
            <a class="nav-link collapsed" href="/trainer/announcement">
                <i class="bi bi-megaphone"></i>
                <span>Announcement</span>
            </a>
        </li>

          <li class="nav-item">
            <a class="nav-link collapsed" href="/trainer/profile">
              <i class="bi bi-person-lines-fill"></i>
              <span>Profile</span>
            </a>
          </li>
        </ul>
      </aside>
      <!-- End Sidebar-->
      <main id="main" class="main">
        <div class="pagetitle">
          <h1>Client Management</h1>
          <nav style="--bs-breadcrumb-divider: '>';">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/trainer/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Client Management</li>
            </ol>
          </nav>
        </div>
        <section class="section profile">
          <div class="row">
            <div class="card ">
              <div class="card-body">
                <h5 class="card-title mb-4">My Active Clients</h5>
                <div class="table-responsive-md">
                  <table class="table table-bordered" id="historyTable">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Fullname</th>
                        <th scope="col">Service
                        </th>
                        <th scope="col">Plan
                        </th>
                        <th scope="col">Date
                        </th>
                        <th scope="col" class="text-center">Action</th>

                      </tr>
                    </thead>
                    <tbody>
                      <% clientData.forEach(function(client,index) { %>
                        <tr>
                          <th scope="row">
                            <%= index + 1 %>
                          </th>
                          <td>
                            <%= client.fullname %>
                          </td>
                          <td>
                            <%= client.membership_service %>
                          </td>
                          <td>
                            <%= client.membership_plan %> Month/s
                          </td>
                          <td>
                            <%= new Date(client.join_date).toLocaleDateString('en-US', { month: 'long'
                            , day: 'numeric' , year: 'numeric' }) %>
               
                          </td>
                          <td class="text-center">
                            <a href="/trainer/client/<%= client.username %>" class="link-dark"><i class="bi bi-eye"></i> View Details</a>
                          </td>
                        </tr>
                        <% }); %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>

        </section>

      </main>
      <!-- End #main -->
      <%-include ("../Includes/Trainer/script.ejs")%>
        <script>

        </script>
  </body>

  </html>