                <ul class="sidebar-nav" id="sidebar-nav">

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/admin/dashboard">
                            <i class="bi bi-grid-fill"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <!-- End Dashboard Nav -->
                    </li><!-- End Components Nav -->
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/admin/client">
                            <i class="bi bi-people-fill"></i>
                            <span>Manage Clients</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/admin/equipment">
                            <i class="bi bi-gear"></i>
                            <span>Manage Equipment</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/admin/attendance">
                            <i class="bi bi-calendar-check"></i>
                            <span>Manage Attendance</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/admin/membership">
                            <i class="bi bi-card-checklist"></i>
                            <span>Manage Membership</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/admin/Manage Trainer">
                            <i class="bi bi-megaphone"></i>
                            <span>Manage Trainer</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/admin/trainer">
                            <i class="bi bi-person-bounding-box"></i>
                            <span>Manage Trainer</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="/admin/profile">
                            <i class="bi bi-person-lines-fill"></i>
                            <span>Profile</span>
                        </a>
                    </li>
                </ul>
            </aside>
            <!-- End Sidebar-->
            <main id="main" class="main">
                <div class="pagetitle">
                    <h1>Edit Trainer</h1>
                    <nav style="--bs-breadcrumb-divider: '>';">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                            <li class="breadcrumb-item active">Edit Trainer</li>
                        </ol>
                    </nav>
                </div>
                <section class="section profile">
                    <div class="row">
                        <%-include ("../Includes/message.ejs")%>
                            <div class="card ">
                                <div class="card-body">

                                    <h5 class="card-title mb-4">Edit Information Details</h5>

                                    <form method="post" action="/admin/trainer/edit" class="needs-validation" novalidate>
                                        <div class="row g-3">
                                            <input type="hidden" value="<%= trainer.trainer_id %>" name="id">
                                            <div class="col-md-4">
                                                <label for="inputFullname"
                                                    class="form-label form-label-custom">Name</label>
                                                <input type="text" class="form-control" id="inputFullname"
                                                    aria-describedby="textHelp" required minlength="3" name="fullname"
                                                    value="<%= trainer.fullname %>">
                                                <div class="invalid-feedback">Required</div>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="inputAddress"
                                                    class="form-label form-label-custom">Address</label>
                                                <input type="text" class="form-control" id="inputAddress"
                                                    aria-describedby="textHelp" required name="address"
                                                    value="<%= trainer.address %>">
                                                <div class="invalid-feedback">Required</div>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="exampleInputEmail1"
                                                    class="form-label form-label-custom">Email address</label>
                                                <input type="email" class="form-control" id="exampleInputEmail1"
                                                    aria-describedby="emailHelp" required name="email"
                                                    value="<%= trainer.email %>">
                                                <div class="invalid-feedback">Required</div>
                                            </div>
                                        </div>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label for="inputPhonenumber" class="form-label form-label-custom">Phone
                                                    Number</label>
                                                <input type="tel" class="form-control" id="inputPhonenumber"
                                                    name="phonenumber" required minlength="11" maxlength="11"
                                                    value="<%= trainer.phonenumber %>">
                                                <div class="invalid-feedback">Required</div>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="inputUsername"
                                                    class="form-label form-label-custom">Username</label>
                                                <input type="text" class="form-control" id="inputUsername"
                                                    name="username" required minlength="3"
                                                    value="<%= trainer.username %>">
                                                <div class="invalid-feedback">Required</div>
                                            </div>
                                        </div>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label for="inputGender"
                                                    class="form-label form-label-custom">Gender</label>
                                                <select class="form-select" id="inputGender" name="gender" required>
                                                    <option value="" disabled>Select Gender</option>
                                                    <option value="Male" <%=trainer.gender==='Male' ? 'selected' : '' %>
                                                        >Male</option>
                                                    <option value="Female" <%=trainer.gender==='Female' ? 'selected'
                                                        : '' %>>Female</option>
                                                </select>
                                                <div class="invalid-feedback">Required</div>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="inputAge" class="form-label form-label-custom">Age</label>
                                                <input type="number" class="form-control" id="inputAge" name="age"
                                                    required value="<%= trainer.age %>">
                                                <div class="invalid-feedback">Required</div>
                                            </div>
                                        </div>
                                        <div class="mt-3">
                                            <button type="submit" class="btn btn-dark me-1">Save Changes</button>
                                            <a href="/admin/trainer" class="btn btn-outline-dark">Cancel</a>
                                        </div>
                                    </form>

                                </div>
                            </div>
                    </div>

                </section>


            </main>
            <!-- End #main -->
            <%-include ("../Includes/Admin/script.ejs")%>
                <script>


                </script>
    </body>

    </html>